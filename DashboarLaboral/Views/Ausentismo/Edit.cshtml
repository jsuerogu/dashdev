@model AusentismoDto

<div>
    <div class="modal-title">
        @if (string.IsNullOrWhiteSpace(Model.Id))
        {
            <h3>Agregar Ausentismo</h3>
        }
        else
        {
            <h3>Editar Ausentismo</h3>
        }
    </div>
    <form method="post" class="modal-link-submit" data-action="@Url.Content("~/Ausentismo/Edit")">
        @Html.HiddenFor(p => p.Id)
        <div class="form-group">
            <label asp-for="Aucod">Código:</label>
            <input class="form-control" asp-for="Aucod" type="text" />
            <span class="text-danger" asp-validation-for="Aucod"></span>
        </div>
        <div class="form-group">
            <label asp-for="Audes">Descripción:</label>
            <input class="form-control" asp-for="Audes" type="text" />
            <span class="text-danger" asp-validation-for="Audes"></span>
        </div>
        <div class="form-group">
            <label asp-for="Aujus">Justificado:</label>
            <br />
            @Html.CheckBoxFor(m => m.Aujus,  new { @class = "toggle-field", type="checkbox",  data_toggle="toggle", data_on="Si", data_off="No", data_onstyle="secondary", data_height="40", data_width="100%"})
        </div>
        <div class="form-group">
            <label asp-for="Autel">Teletrabajo:</label>
            <br />
            @Html.CheckBoxFor(m => m.Autel,  new { @class = "toggle-field", type="checkbox",  data_toggle="toggle", data_on="Si", data_off="No", data_onstyle="secondary", data_height="40", data_width="100%"})
        </div>
        <div class="form-group">
            <label asp-for="Riesgo">Riesgo:</label>
            <br />
            @Html.CheckBoxFor(m => m.Riesgo,  new { @class = "toggle-field", type="checkbox",  data_toggle="toggle", data_on="Si", data_off="No", data_onstyle="secondary", data_height="40", data_width="100%"})
        </div>
        <div class="form-group">
            <label asp-for="Cuarentena">Cuarentena:</label>
            <br />
            @Html.CheckBoxFor(m => m.Cuarentena,  new { @class = "toggle-field", type="checkbox",  data_toggle="toggle", data_on="Si", data_off="No", data_onstyle="secondary", data_height="40", data_width="100%"})
        </div>
        <br />
        <div class="row">
            <div class="col-md-6 col-12 col-sm-12 col-lx-6">
                <button type="submit" id="guardar" class="btn color-btn btn-block">Guardar</button>
            </div>
        </div>
    </form>
</div>



@section Scripts {
<script>
    $(
        function () {
           $(document).ready(function () {
               $('#preload').hide();
           };

        });
</script>
}
