@model EmpresaDto

<div class="modal-title">
    @if (Model.RowId == Guid.Empty)
    {
        <h3>Agregar Empresa</h3>
    }
    else
    {
        <h3>Editar Empresa</h3>
    }
</div>
<form method="post" class="modal-link-submit" data-action="@Url.Content("~/Empresas/Edit")">
    @Html.HiddenFor(p => p.RowId)
    <div class="form-group">
        <label asp-for="Codigo">Código:</label>
        @if (Model.RowId == Guid.Empty)
        {
            <input class="form-control" asp-for="Codigo" type="text" />
            <span class="text-danger" asp-validation-for="Codigo"></span>
        }
        else
        {
            <input class="form-control" asp-for="Codigo" type="text" readonly="true" />
        }
    </div>
    <div class="form-group">
        <label asp-for="Nombre">Nombre:</label>
        <input class="form-control" asp-for="Nombre" type="text" />
        <span class="text-danger" asp-validation-for="Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color">Color:</label>
        <input class="form-control" asp-for="Color" type="color" />
    </div>

    <div class="row">
        <div class="col-md-6 col-12 col-sm-12 col-lx-6">
            <button type="submit" id="guardar" class="btn color-btn btn-block">Guardar</button>
        </div>
    </div>
</form>




@section Scripts {
    <script>
        $(
            function () {
                $(document).ready(function () {
                    $('#preload').hide();
                };

            });
    </script>
}
