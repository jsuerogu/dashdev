@model ParametroDto

<div>
    <div class="modal-title">
          <h3>Editar Parámetro</h3>
    </div>
    <form  method="post" class="modal-link-submit" data-action="@Url.Content("~/Parametros/Edit")">
        @Html.HiddenFor(p => p.RowId)
        @Html.HiddenFor(p => p.Nombre)
        <div class="form-group">
            <label asp-for="Empresa">Empresa:</label>
            <label asp-for="Empresa">@Model.Empresa</label>
        </div>
        <div class="form-group">
            <label asp-for="Nombre">Nombre:</label>
            <label asp-for="Nombre">@Model.Nombre</label>
        </div>
        <div class="form-group">
            <label asp-for="Valor">Valor:</label>
            <input class="form-control" asp-for="Valor" type="text" />
            <span class="text-danger" asp-validation-for="Valor"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion">Descripción:</label>
            <input class="form-control" asp-for="Descripcion" type="text" />
            <span class="text-danger" asp-validation-for="Descripcion"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mensaje">Mensaje:</label>
            <input class="form-control" asp-for="Mensaje" type="text" />
            <span class="text-danger" asp-validation-for="Mensaje"></span>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6 col-12 col-sm-12 col-lx-6">
                <button type="submit" id="guardar" class="btn color-btn btn-block">Guardar</button>
            </div>
        </div>

    </form>
</div>



@section Scripts {
<script>
     $(
         function () {
            $(document).ready(function () {
                $('#preload').hide();
            };
         
         });
</script>
}
